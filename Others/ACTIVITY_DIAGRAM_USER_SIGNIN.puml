@startuml User Sign-In Workflow
!theme plain
skinparam defaultFontName Arial
skinparam defaultFontSize 12
skinparam activityBorderColor #2C3E50
skinparam activityStartColor #27AE60
skinparam activityEndColor #E74C3C
skinparam activityArrowColor #34495E

title User Sign-In Workflow

start
:Access Login Page;

if (Already logged in?) then (yes)
  if (Admin user?) then (yes)
    :Go to Admin Dashboard;
    stop
  else (no)
    :Go to Main Application;
    stop
  endif
else (no)
  :Enter credentials;
  :Submit login form;
  :Validate input;
  
  if (Valid credentials?) then (no)
    :Show error message;
    stop
  else (yes)
    :Authenticate user;
    
    if (Account approved?) then (no)
      :Show "Pending approval" message;
      stop
    else (yes)
      :Create user session;
      :Log login activity;
      
      if (Admin user?) then (yes)
        :Redirect to Admin Dashboard;
      else (no)
        :Redirect to Main Application;
      endif
    endif
  endif
endif

stop
@enduml
