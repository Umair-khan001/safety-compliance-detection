@startuml Admin Management Activities Workflow
!theme plain
skinparam defaultFontName Arial
skinparam defaultFontSize 12
skinparam activityBorderColor #2C3E50
skinparam activityStartColor #27AE60
skinparam activityEndColor #E74C3C
skinparam activityArrowColor #34495E

title Admin Management Activities Workflow

start
:Login with admin credentials;
:Access Admin Dashboard;
:View system overview;

if (Admin selects action) then (User Management)
  :Navigate to users list;
  :View pending users;
  
  if (Admin action) then (Approve User)
    :Approve user account;
    :Update user status;
    :Log approval activity;
    
  elseif (Reject User)
    :Reject user account;
    :Update user status;
    :Log rejection activity;
    
  else (View Details)
    :Review user information;
    
  endif

elseif (Activity Logs)
  :View system activity logs;
  :Monitor user behavior;
  :Review system events;

elseif (System Settings)
  :Access configuration;
  :Modify system parameters;
  :Log configuration changes;

else (Detection Statistics)
  :View detection analytics;
  :Generate reports;
  :Analyze system performance;

endif

:Continue admin tasks or logout;

if (Logout?) then (yes)
  :Clear admin session;
  :Log logout activity;
  :Redirect to login;
  stop
else (no)
  :Return to dashboard;
endif

stop
@enduml
